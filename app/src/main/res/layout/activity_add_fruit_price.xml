<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFF3FA"
    tools:context=".AddFruitPriceActivity">

    <TextView
        android:id="@+id/orangeId3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="75dp"
        android:autoText="false"
        android:background="#00FFC107"
        android:text="Orange"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bananaId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mangoId3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="200dp"
        android:background="#00CDDC39"
        android:text="Mango"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bananaId" />

    <TextView
        android:id="@+id/bananaId2"
        android:layout_width="82dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        android:text="Banana"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mangoId3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orangeId3" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/orange_price"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/orangeId3"
        app:layout_constraintStart_toEndOf="@+id/orangeId3" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/banana_price"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bananaId2"
        app:layout_constraintStart_toEndOf="@+id/bananaId2" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/mango_price"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/mangoId3"
        app:layout_constraintStart_toEndOf="@+id/mangoId3" />

    <Button
        android:id="@+id/addPrice"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="75dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAddPrice"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="105dp"
        android:text="Add Fruit Price"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>